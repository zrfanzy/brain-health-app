							android:id="@+id/digit12"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							image=""
							/>
							</LinearLayout>
						</TableRow>
						<TableRow>
							<LinearLayout
							  android:layout_width="wrap_content"
							  android:layout_height="match_parent"
							  android:orientation="horizontal" >
							<thu.voicetest.DigitAllView
							android:id="@+id/digit13"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							image=""
							/>
							<thu.voicetest.DigitAllView
							android:id="@+id/digit14"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							image=""
							/>
							</LinearLayout>
						</TableRow>
						<TableRow>
							<LinearLayout
							    android:layout_width="wrap_content"
							    android:layout_height="match_parent"
                                android:background="#AFAFAF"
							    android:orientation="horizontal" >
							    <TextView
								    android:id="@+id/trailScore"
								    android:layout_width="wrap_content"
								    android:layout_height="wrap_content"
								    android:layout_marginTop="10dip"
								    android:background="#AFAFAF"
								    android:text="SCORE:" />
							    <TextView
								    android:id="@+id/score1"
								    android:layout_width="wrap_content"
								    android:layout_height="wrap_content"
								    android:layout_marginTop="10dip"
								    android:text="The longest correct span =     " />
							    <TextView
								    android:id="@+id/score2"
								    android:layout_width="wrap_content"
								    android:layout_height="wrap_content"
								    android:layout_marginTop="10dip"
								    android:text="The longest span =     " />
                            </LinearLayout>
                        </TableRow>


                        <TableRow android:id = "@+id/row2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="610dp"
                                android:layout_height="wrap_content"
                                android:background="#b5cbe5"
                                android:orientation="horizontal"
                                android:layout_marginBottom="10dp">
                                <TextView
                                    android:text="\nIs qualitative score valid?"
                                    android:width="200dp"
                                    android:gravity="left"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp" />

                                <RadioGroup
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="10sp"
                                        android:width="250dp"
                                        android:text="No" />
                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="10sp"
                                        android:text="Yes" />
                                </RadioGroup>
                            </LinearLayout>
                        </TableRow>
                        <TableRow>
                            <Button
                                android:id = "@+id/getScore"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Score"
                                />
                        </TableRow>

						<TableRow android:background="#AFAFAF"
							android:layout_marginBottom="50dp">
							<TextView
								android:id="@+id/down"
								android:layout_width="650dp"
								android:layout_height="wrap_content"
								android:layout_gravity="right"
								android:background="#AFAFAF"
								android:text="NP007" />
						</TableRow>

						<TableRow>
							<Button
								android:id = "@+id/getNext"
								android:layout_width="300dp"
								android:layout_height="wrap_content"
								android:layout_gravity="center_horizontal"
								android:text="Next" />
						</TableRow>
			  		</TableLayout>
				</LinearLayout>
			</HorizontalScrollView>
		</LinearLayout>
	</ScrollView>
