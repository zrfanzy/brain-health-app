<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical" android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:gravity="center_horizontal">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fadingEdge="horizontal|vertical"
                android:scrollbars="horizontal|vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TableLayout
                        android:id="@+id/tableLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stretchColumns="3" >
                        <TableRow>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_gravity="center_horizontal">
                                <TextView
                                    android:id="@+id/description"
                                    android:text="VISUAL REPRODUCTION (WMS),\n Immediate"
                                    android:layout_width="330dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dip"
                                    android:textSize="20sp"
                                    android:gravity="center_horizontal" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#AFAFAF"
                                    android:orientation="horizontal" >
                                    <TextView
                                        android:id="@+id/des1"
                                        android:layout_width="300dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="10dip"
                                        android:text="\nCheck here if test NOT completed\n(record reason in Factors Affecting Testing section)"
                                        android:textSize="12sp"
                                        android:gravity="right" />
                                    <CheckBox
                                        android:id="@+id/checkBox1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" " />
                                </LinearLayout>
                            </LinearLayout>
                        </TableRow>

                        <TableRow android:layout_marginTop="50dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="#000000">

                                <TextView
                                    android:text="Design\n(max possible points)"
                                    android:gravity="left"
                                    android:width="250dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#AFAFAF"
                                    android:textSize="20sp"
                                    android:layout_margin="1dp"/>

                                <TextView
                                    android:text="A\n(3)"
                                    android:gravity="center"
                                    android:width="105dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#AFAFAF"
                                    android:textSize="20sp"
                                    android:layout_margin="1dp"/>

                                <TextView
                                    android:text="B\n(5)"
                                    android:gravity="center"
                                    android:width="105dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#AFAFAF"
                                    android:textSize="20sp"
                                    android:layout_margin="1dp"/>

                                <TextView
                                    android:text="C1\n(3)"
                                    android:gravity="center"
                                    android:width="105dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#AFAFAF"
                                    android:textSize="20sp"
                                    android:layout_margin="1dp"/>

                                <TextView
                                    android:text="C2\n(3)"
                                    android:gravity="center"
                                    android:width="105dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#AFAFAF"
                                    android:textSize="20sp"
                                    android:layout_margin="1dp"/>
                            </LinearLayout>
                        </TableRow>

                        <TableRow>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="#000000">

                                <TextView
                                    android:text="Total number of points scored"
                                    android:gravity="left"
                                    android:width="250dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#FFFFFF"
                                    android:textSize="12sp"
                                    android:layout_margin="1dp"/>

                                <EditText
                                    android:text=""
                                    android:gravity="center"
                                    android:width="105dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#FFFFFF"
                                    android:textSize="20sp"
                                    android:layout_margin="1dp"/>

                                <EditText
                                    android:text=""
                                    android:gravity="center"
                                    android:width="105dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#FFFFFF"
                                    android:textSize="20sp"
                                    android:layout_margin="1dp"/>

                                <EditText
                                    android:text=""
                                    android:gravity="center"
                                    android:width="105dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#FFFFFF"
                                    android:textSize="20sp"
                                    android:layout_margin="1dp"/>

                                <EditText
                                    android:text=""
                                    android:gravity="center"
                                    android:width="105dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#FFFFFF"
                                    android:textSize="20sp"
                                    android:layout_margin="1dp"/>
                            </LinearLayout>
                        </TableRow>

                        <TableRow android:layout_marginTop="50dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="#000000">

                                <TextView
                                    android:text="Qualitative findings"
                                    android:gravity="left"
                                    android:width="250dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#AFAFAF"
                                    android:textSize="20sp"
                                    android:layout_margin="1dp"/>

                                <TextView
                                    android:text="A"
                                    android:gravity="center"
                                    android:width="105dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#AFAFAF"
                                    android:textSize="20sp"
                                    android:layout_margin="1dp"/>

                                <TextView
                                    android:text="B"
                                    android:gravity="center"
                                    android:width="105dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#AFAFAF"
                                    android:textSize="20sp"
                                    android:layout_margin="1dp"/>

                                <TextView
                                    android:text="C1"
                                    android:gravity="center"
                                    android:width="105dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#AFAFAF"
                                    android:textSize="20sp"
                                    android:layout_margin="1dp"/>

                                <TextView
                                    android:text="C2"
                                    android:gravity="center"
                                    android:width="105dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#AFAFAF"
                                    android:textSize="20sp"
                                    android:layout_margin="1dp"/>
                            </LinearLayout>
                        </TableRow>
                            <thu.questions.DrawScoreView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content">

                            </thu.questions.DrawScoreView>

                        <TableRow android:layout_marginTop="10dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="#000000">

                                <TextView
                                    android:text="Pt lacks obvious awareness that there should be four drawings (circle)"
                                    android:gravity="left"
                                    android:width="350dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#AFAFAF"
                                    android:textSize="15sp"
                                    android:layout_margin="1dp"/>

                                <Button android:id="@+id/bt1_1"
                                    android:text="0\nNo"
                                    android:gravity="center"
                                    android:width="160dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#FFFFFF"
                                    android:textSize="15sp"
                                    android:layout_margin="1dp"/>

                                <Button android:id="@+id/bt1_2"
                                    android:text="1\nYes"
                                    android:gravity="center"
                                    android:width="160dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#FFFFFF"
                                    android:textSize="15sp"
                                    android:layout_margin="1dp"/>
                            </LinearLayout>
                        </TableRow>

                        <TableRow android:layout_marginBottom="10dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="#000000">

                                <TextView
                                    android:text="Are there qualitative findings? (circle)"
                                    android:gravity="left"
                                    android:width="350dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#AFAFAF"
                                    android:textSize="15sp"
                                    android:layout_margin="1dp"/>

                                <Button android:id="@+id/bt2_1"
                                    android:text="0\nNo\n(leave Qual findings section blank)"
                                    android:gravity="center"
                                    android:width="160dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#FFFFFF"
                                    android:textSize="15sp"
                                    android:layout_margin="1dp"/>

                                <Button android:id="@+id/bt2_2"
                                    android:text="1\nYes\n(fill in Qual findings section)"
                                    android:gravity="center"
                                    android:width="160dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#FFFFFF"
                                    android:textSize="15sp"
                                    android:layout_margin="1dp"/>
                            </LinearLayout>
                        </TableRow>

                        <TableRow>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="#000000">

                                <ImageView android:id="@+id/imgA"
                                    android:gravity="left"
                                    android:width="310dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />

                                <ImageView android:id="@+id/imgB"
                                    android:gravity="left"
                                    android:width="310dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                        </TableRow>

                        <TableRow>
                            <ImageView android:id="@+id/imgC"
                                android:gravity="left"
                                android:width="620dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                        </TableRow>

                        <TableRow android:background="#AFAFAF"
                            android:layout_marginBottom="50dp">
                            <TextView
                                android:id="@+id/down"
                                android:layout_width="650dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:background="#AFAFAF"
                                android:text="NP005" />
                        </TableRow>

                        <TableRow >
                            <Button
                                android:id = "@+id/showImgNext"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:text="     Next     "
                                android:layout_marginTop="50dp" />
                        </TableRow>

                    </TableLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
